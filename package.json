{
  "name": "vixt-framework",
  "type": "module",
  "version": "0.0.11",
  "private": true,
  "scripts": {
    "build": "pnpm -F \"./packages/*\" build",
    "build:web": "pnpm -F @vixt/web build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "dev": "pnpm -F @vixt/web dev",
    "dev:h5": "pnpm -F @vixt/app dev",
    "dev:mp": "pnpm -F @vixt/app dev:mp",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks",
    "preview:web": "pnpm -F @vixt/web preview",
    "release": "tsx scripts/release.ts",
    "rm:dist": "tsx scripts/rm-dist.ts",
    "tc": "tsc --noEmit",
    "upd": "taze major -r -l -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@unocss/eslint-plugin": "^0.61.0",
    "bumpp": "^9.4.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.6.0",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "^15.2.7",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.14.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "unbuild": "^2.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9",
        "vue": "3"
      }
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit $1",
    "pre-commit": "pnpm lint-staged"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
